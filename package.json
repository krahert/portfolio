{
  "name": "api_server",
  "version": "1.0.0",
  "description": "API Server for Portfolio",
  "main": "index.js",
  "jest": {
    "setupTestFrameworkScriptFile": "./__intTests__/setup.js",
    "collectCoverageFrom": ["./__intTests__"]

  },
  "scripts": {
    "server": "nodemon index.js --ignore tests",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "unit-test": "npm run test --prefix client",
    "int-test": "jest __intTests__/ --forceExit",
    "test": "npm run unit-test && npm run int-test"
  },
  "author": "Eduard Nedelcescu",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.1",
    "content-filter": "^1.1.2",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "express-rate-limit": "^2.11.0",
    "helmet": "^3.12.1",
    "keygrip": "^1.0.2",
    "mongoose": "^5.1.5",
    "nodemon": "^1.18.3",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "puppeteer": "^1.6.2",
    "rate-limit-redis": "^1.5.0",
    "redis": "^2.8.0",
    "safe-buffer": "^5.1.2",
    "uuid": "^3.2.1"
  }
}
